
#include <iostream>
#include<stdio.h>

using namespace std;
int y=0;
int fun(int n)
{
    
    if(n>0){
       y++;
        return fun(n-1)+y;
        printf("i am here");
    }
    
    return 0;
}
int main()
{
    int r,x=5;
    r=fun(x);
    printf("%d",r);
    r=fun(x);
    printf("%d",r);
    return 0;
}
